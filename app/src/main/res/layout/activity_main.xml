<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E4A50"
    android:backgroundTint="#000000"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="39dp"
    tools:layout_editor_absoluteY="433dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#252323"
            android:text="Novelas"
            android:textColor="#A6A3A3"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp" />

        <HorizontalScrollView
            android:id="@+id/hsv001"
            android:layout_width="600dp"
            android:layout_height="288dp"
            app:layout_constraintTop_toBottomOf="@+id/tv001">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="235dp"
                    android:layout_height="308dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/hilda_furac" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rei_gadoss" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="221dp"
                    android:layout_height="301dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/muie_areia" />

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/av_brasil" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#252323"
            android:text="Series"
            android:textColor="#A6A3A3"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hsv001" />

        <HorizontalScrollView
            android:id="@+id/hsv002"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tv002">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/simpsons" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/law_order" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/porta_d_fundos" />

                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/got" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/black_list" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv003"
            android:layout_width="574dp"
            android:layout_height="34dp"
            android:background="#252323"
            android:text="Filmes"
            android:textColor="#A6A3A3"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/hsv002"
            tools:layout_editor_absoluteX="16dp" />

        <HorizontalScrollView
            android:id="@+id/hsv003"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tv003">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/imag_001" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/duna1" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/duna2" />

                <ImageView
                    android:id="@+id/imgView2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/parasita" />

            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

